# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy file này thành .env trên server production
# Thay đổi tất cả các giá trị với giá trị thực của bạn
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=your_strong_database_password_here
POSTGRES_DB=ai_deadline

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Tạo secret key mạnh: openssl rand -hex 32
SECRET_KEY=your_very_long_and_secure_secret_key_here_minimum_32_characters

# -----------------------------------------------------------------------------
# Gemini AI API
# -----------------------------------------------------------------------------
# Lấy từ: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Email Configuration (cho n8n gửi email thông báo)
# -----------------------------------------------------------------------------
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
# Sử dụng App Password, không dùng password thường
# Hướng dẫn: https://support.google.com/accounts/answer/185833
EMAIL_PASSWORD=mfpn wclk sqaq jjbq
EMAIL_FROM=noreply@ai-deadline.io.vn
ADMIN_EMAIL=admin@your-email.com

# -----------------------------------------------------------------------------
# pgAdmin (nếu sử dụng)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@ai-deadline.io.vn
PGADMIN_PASSWORD=your_pgadmin_password_here
